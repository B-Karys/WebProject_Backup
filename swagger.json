      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3002",
  "basePath": "/",
  "tags": [
    {
      "name": "user",
      "description": "API for users in the system"
    },
    {
      "name": "Teams",
      "description": "API for teams in the system"
    }
  ],
  "paths": {
    "/user/": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get all users",
        "operationId": "findAll",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/user/id{id}": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get one user",
        "operationId": "findOne",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of user to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "Create one user",
        "operationId": "create",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json/ejs"
        ],
        "responses": {
          "200": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "409": {
            "description": "Database error"
          }
        }
      }
    },
    "/user/:nickname": {
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "Update the role and rank of your user",
        "operationId": "update",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to update",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json/ejs"
        ],
        "responses": {
          "200": {
            "description": "User is updated",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "409": {
            "description": "Database error"
          }
        }
      },
      "delete": {
        "tags": [
          "user"
        ],
        "summary": "delete one user",
        "operationId": "destroy",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to delete",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json/ejs"
        ],
        "responses": {
          "200": {
            "description": "User is deleted",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "409": {
            "description": "Database error"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "format": "objectId"
        },
        "nickname": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "rank": {
          "type": "string"
        }
      }
    }
  }
}